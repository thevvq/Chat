extends ../../layouts/socialDashboard.pug

block main
    .friends-container
        h1.title Lời mời đã gửi

        .users-list
            each user in users
                .box-user.add
                    .inner-avatar
                        img(src=user.avatar alt=user.fullName)
                    .inner-info
                        .inner-name= user.fullName
                        .inner-buttons
                            // Giữ nút Kết bạn
                            button.btn.btn-sm.btn-primary.mr-1(btn-add-friend=user.id) Kết bạn
                            button.btn.btn-sm.btn-secondary.mr-1(btn-cancel-friend=user.id) Hủy
                        
                            // ĐÃ SỬA: Thay thế class nút bằng .btn-text-sm để làm chữ to hơn
                            button.btn-text-sm(btn-cancel-friend=user.id) Hủy
