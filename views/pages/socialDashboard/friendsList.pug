extends ../../layouts/socialDashboard.pug

block main
    .friends-container
        h1.title Danh sách bạn bè

        .users-list(data-users-friend=user.id)
            each u in users
                .box-user(user-id=u.id)
                    .inner-avatar
                        img(src=u.avatar alt=u.fullName)
                    .inner-info
                        .inner-name= u.fullName
                        .inner-buttons
                            button.btn.btn-sm.btn-secondary.btn-destructive.mr-1(btn-unfriend=u.id) Hủy kết bạn
                            a.btn.btn-sm.btn-primary.mr-1(href=`/${u.friendInfo.room_chat_id}`) Nhắn tin
                    .inner-status(status=u.statusOnline)
                        i.fa-solid.fa-circle
