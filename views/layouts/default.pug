doctype html
html
    head
        title #{pageTitle}
        
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous")
        link(rel="stylesheet", href="https://unpkg.com/file-upload-with-preview/dist/style.css")
        link(rel="stylesheet", href="/css/style.css")
    body
        .chat-container
            // Cột trái - Danh sách bạn bè / nhóm
            .sidebar
                ul.chat-list
                    li
                        a.active(href="/")
                            i.fa-solid.fa-comment
                            span Tin nhắn
                    li 
                        a(href="/socialDashboard/friendsList")
                            i.fa-solid.fa-user-group
                            span Liên hệ
                    li 
                        a(href="#")
                            i.fa-solid.fa-gear                
                            span Cài đặt
            .content-list
                block contentList 
            .content-view 
                block main
                                    

        script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.min.js" integrity="sha384-G/EV+4j2dNv+tEPo3++6LCgdCROaejBqfUeNjuKAiuXbjrxilcCdDz6ZAVfHWe1Y" crossorigin="anonymous")

        //- SocketIO
        script(src="/socket.io/socket.io.js") 
        script(src="/js/socket.js")
        script(type='module' src="/js/chat.js")

        //- emoji picker element
        script(type="module" src="https://cdn.jsdelivr.net/npm/emoji-picker-element@^1/index.js")

        //- file-upload-with-preview
        script(src="https://unpkg.com/file-upload-with-preview/dist/index.js") 

        //- script 
        block script
