doctype html
html
    head
        title #{pageTitle}
        
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet")
        link(rel="stylesheet", href="https://unpkg.com/file-upload-with-preview/dist/style.css")
        link(rel="stylesheet", href="/css/style.css")

    body
        .chat-container
            // Sidebar trái
            .sidebar
                ul.chat-list
                    li
                        a.active(href="/")
                            i.fa-solid.fa-comment
                            span Tin nhắn

                    li 
                        a(href="/socialDashboard/friendsList")
                            i.fa-solid.fa-user-group
                            span Liên hệ

                    li 
                        a(href="/auth/logout")
                            i.fa-solid.fa-right-from-bracket
                            span Đăng xuất

            .content-list
                block contentList 

            .content-view
                block main

        // JS
        script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.min.js")

        // SocketIO
        script(src="/socket.io/socket.io.js") 
        script(src="/js/socket.js")
        script(type='module' src="/js/chat.js")

        // emoji picker
        script(type="module" src="https://cdn.jsdelivr.net/npm/emoji-picker-element@^1/index.js")

        // file upload
        script(src="https://unpkg.com/file-upload-with-preview/dist/index.js")

        block script
